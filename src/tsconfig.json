{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "../dist",
		"composite": true,
		"tsBuildInfoFile": "../dist/tsconfig.tsbuildinfo",
		"paths": {
			"#root/*": ["*"],
			"#lib/*": ["lib/*"],
			"#utils/*": ["utils/*"],
			"#lib/setup": ["lib/setup/index.js"]
		}
	},
	"include": [".", "./**/*.json"],
	"exclude": ["./tsconfig.json"]
}
